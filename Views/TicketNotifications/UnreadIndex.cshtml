@model Automata_DTaylor_Bugtracker.ViewModels.CollectedNotifications

@{
    ViewBag.Title = "Index";
}

<h2>Unread Notifications</h2>
<br />

@if (User.IsInRole("Developer"))
{
    <div class="container-fluid">
        <div class="panel panel-inverse">
            <div class="panel-heading">
                <div class="panel-heading-btn">
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-redo"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                    <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
                </div>
                <h4 class="panel-title">Unread Ticket Notifications Index</h4>
            </div>
            <div class="panel-body">
                <table id="data-table-combine" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("Notification")
                            </th>
                            <th>
                                @Html.DisplayName("Time Generated")
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.TicketNotifications)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NotificationBody)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Created.DateTime)
                                </td>
                                <td>
                                    @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |*@
                                    @Html.ActionLink("Mark as read", "MarkAsRead", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}


<div class="container-fluid">
    <div class="panel panel-inverse">
        <div class="panel-heading">
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-redo"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
            </div>
            <h4 class="panel-title">Unread Project Notifications Index</h4>
        </div>
        <div class="panel-body">
            <table id="data-table-combine2" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayName("Notification")
                        </th>
                        <th>
                            @Html.DisplayName("Time Generated")
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ProjectNotifications)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NotificationBody)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Created.DateTime)
                            </td>
                            <td>
                                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |*@
                                @Html.ActionLink("Mark as read", "MarkProjectAsRead", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



