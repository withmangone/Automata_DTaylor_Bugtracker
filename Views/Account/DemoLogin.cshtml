@using Automata_DTaylor_Bugtracker.Models
@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en">
<!--<![endif]-->
<head>
    <meta charset="utf-8" />
    <title>DT BugTracker</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />

    <!--favicon-->
    <link name="favicon" id="favicon" rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />

    <!-- ================== BEGIN BASE CSS STYLE ================== -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/Content/all.min.css" rel="stylesheet" />*@
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <link href="~/Content/animate.min.css" rel="stylesheet" />
    <link href="~/Content/style.min.css" rel="stylesheet" />
    <link href="~/Content/style-responsive.min.css" rel="stylesheet" />
    <link href="~/Content/default.css" rel="stylesheet" />
    <link href="~/Content/DrewCustom.css" rel="stylesheet" />
    <!-- ================== END BASE CSS STYLE ================== -->
    <!-- ================== BEGIN BASE JS ================== -->
    <script src="~/Scripts/pace.min.js"></script>
    <!-- ================== END BASE JS ================== -->


</head>
<body class="pace-top">
    <!-- begin #page-loader -->
    <div id="page-loader" class="fade show"><span class="spinner"></span></div>
    <!-- end #page-loader -->
    <!-- begin #page-container -->
    <div id="page-container" class="fade">
        <!-- begin login -->
        <div class="login bg-black animated fadeInDown">
            <!-- begin brand -->
            <div class="login-header">
                <div class="brand">
                    <img src="~/Images/FA_Bug_28x28.png" style="margin-top:-5px"> <b>DT</b> BugTracker
                    <small>A responsive app for systems improvement</small>
                </div>
                <div class="icon">
                    <i class="fa fa-lock"></i>
                </div>
            </div>
            <!-- end brand -->
            <!-- begin login-content -->
            <div class="login-content text">
                <div class="row text-center">
                    <!-- begin widget-card -->
                    @using (Html.BeginForm("DemoLogin", "Account", FormMethod.Post, new { id = "DemoAdmin" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("demoUser", "DemoAdmin")
                        <a href="#" class="widget-card widget-card-rounded m-r-10 text-center DemoWidget" onclick="document.getElementById('DemoAdmin').submit()">
                            <div class="widget-card-cover" style="background-image:url(/Images/BG_1920x1080_707478.png)"></div>
                            <div class="widget-card-content text-center text-white">
                                <b>Demo Admin</b>
                            </div>
                            <div class="widget-card-content bottom" style="margin-top:-20px">
                                <i class="fa fa-gem fa-5x text-pink"></i>
                                <h5 class="f-s-12 m-b-2 m-t-10 text-white text-left"><b>The ringleader. Has almost full permissions across the site.</b></h5>
                            </div>
                        </a>
                    }
                    <!-- end widget-card -->
                    <!-- begin widget-card -->
                    @using (Html.BeginForm("DemoLogin", "Account", FormMethod.Post, new { id = "DemoProjectManager" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("demoUser", "DemoProjectManager")
                        <a href="#" class="widget-card widget-card-rounded text-center DemoWidget" onclick="document.getElementById('DemoProjectManager').submit()">
                            <div class="widget-card-cover" style="background-image:url(/Images/BG_1920x1080_707478.png)"></div>
                            <div class="widget-card-content text-center text-white">
                                <b>Demo Project Manager</b>
                            </div>
                            <div class="widget-card-content bottom" style="margin-top:-20px">
                                <i class="fa fa-tasks fa-5x text-pink"></i>
                                <h5 class="f-s-12 m-b-2 m-t-10 text-white text-left"><b>Middle-Management. The only role with multiple project page views.</b></h5>
                            </div>
                        </a>
                    }
                    <!-- end widget-card -->
                </div>
                <div class="row">
                    <!-- begin widget-card -->
                    @using (Html.BeginForm("DemoLogin", "Account", FormMethod.Post, new { id = "DemoDeveloper" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("demoUser", "DemoDeveloper")
                        <a href="#" class="widget-card widget-card-rounded m-r-10 text-center DemoWidget" onclick="document.getElementById('DemoDeveloper').submit()">
                            <div class="widget-card-cover" style="background-image:url(/Images/BG_1920x1080_707478.png)"></div>
                            <div class="widget-card-content text-center text-white">
                                <b>Demo Developer</b>
                            </div>
                            <div class="widget-card-content bottom" style="margin-top:-20px">
                                <i class="fa fa-tv fa-5x text-pink"></i>
                                <h5 class="f-s-12 m-b-2 m-t-10 text-white text-left"><b>The workhorse. Most functionality across the site directs this role.</b></h5>
                            </div>
                        </a>
                    }
                    <!-- end widget-card -->
                    <!-- begin widget-card -->
                    @using (Html.BeginForm("DemoLogin", "Account", FormMethod.Post, new { id = "DemoSubmitter" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("demoUser", "DemoSubmitter")
                        <a href="#" class="widget-card widget-card-rounded text-center DemoWidget" onclick="document.getElementById('DemoSubmitter').submit()">
                            <div class="widget-card-cover" style="background-image:url(/Images/BG_1920x1080_707478.png)"></div>
                            <div class="widget-card-content text-center text-white">
                                <b>Demo Submitter</b>
                            </div>
                            <div class="widget-card-content bottom" style="margin-top:-20px">
                                <i class="fa fa-hand-pointer fa-5x text-pink"></i>
                                <h5 class="f-s-12 m-b-2 m-t-10 text-white text-left"><b>The instigator. The only role with the ability to create new tickets.</b></h5>
                            </div>
                        </a>
                    }
                    <!-- end widget-card -->
                </div>
                <div>
                    <a href="@Url.Action("Register")" class="LGLink"><span>Prefer to register instead?</span></a>
                </div>
            </div>
            <!-- end login-content -->
        </div>
        <!-- end login -->
    </div>
    <!-- end page container -->
    <!-- ================== BEGIN BASE JS ================== -->
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <!--[if lt IE 9]>
        <script src="../assets/crossbrowserjs/html5shiv.js"></script>
        <script src="../assets/crossbrowserjs/respond.min.js"></script>
        <script src="../assets/crossbrowserjs/excanvas.min.js"></script>
    <![endif]-->
    <script src="~/Scripts/jquery.slimscroll.min.js"></script>
    <script src="~/Scripts/js.cookie.js"></script>
    <script src="~/Scripts/default.min.js"></script>
    <script src="~/Scripts/apps.min.js"></script>
    <!-- ================== END BASE JS ================== -->

    <script>
        $(document).ready(function () {
                        App.init();
                    });</script>
</body>
</html>

