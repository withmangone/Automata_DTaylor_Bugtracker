@using Automata_DTaylor_Bugtracker.Models
@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en">
<!--<![endif]-->
<head>
    <meta charset="utf-8" />
    <title>DT BugTracker</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />

    <!--favicon-->
    <link name="favicon" id="favicon" rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />

    <!-- ================== BEGIN BASE CSS STYLE ================== -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/Content/all.min.css" rel="stylesheet" />*@
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <link href="~/Content/animate.min.css" rel="stylesheet" />
    <link href="~/Content/style.min.css" rel="stylesheet" />
    <link href="~/Content/style-responsive.min.css" rel="stylesheet" />
    <link href="~/Content/default.css" rel="stylesheet" />
    <link href="~/Content/jquery.gritter.css" rel="stylesheet" />
    <link href="~/Content/DrewCustom.css" rel="stylesheet" />
    <!-- ================== END BASE CSS STYLE ================== -->
    <!-- ================== BEGIN BASE JS ================== -->
    <script src="~/Scripts/pace.min.js"></script>
    <!-- ================== END BASE JS ================== -->


</head>
<body class="pace-top">
    <!-- begin #page-loader -->
    <div id="page-loader" class="fade show"><span class="spinner"></span></div>
    <!-- end #page-loader -->
    <!-- begin #page-container -->
    <div id="page-container" class="fade">
        <!-- begin login -->
        <div class="login bg-black animated fadeInDown">
            <!-- begin brand -->
            <div class="login-header">
                <div class="brand">
                    <img src="~/Images/FA_Bug_28x28.png" style="margin-top:-5px"> <b>DT</b> BugTracker
                    <small>A responsive app for systems improvement</small>
                </div>
                <div class="icon">
                    <i class="fa fa-lock"></i>
                </div>
            </div>
            <!-- end brand -->
            <!-- begin login-content -->
            <div class="login-content m-b-30">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken();
                    <div class="form-group m-b-10">
                        <input type="text" name="Email" id="Email" class="form-control form-control-lg inverse-mode" placeholder="Email Address" required />
                    </div>
                    <div class="form-group m-b-30">
                        <input type="password" name="Password" id="Password" class="form-control form-control-lg inverse-mode" placeholder="Password" required />
                    </div>
                    <div class="login-buttons">
                        <button type="submit" class="btn btn-pink HalfButton">Sign In</button>
                    </div>
                }
                @using (Html.BeginForm("Register", "Account", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
                {
                    <div style="margin-top:-34px">
                        <button name="Register" class="btn btn-default HalfButton pull-right" href="@Url.Action("Register")">Register</button>
                    </div>
                }

                <div style="margin-top:50px">
                    <a href="@Url.Action("ForgotPassword")" class="LGLink"><span>Forgot Your Password?</span></a>
                </div>
                <div style="margin-bottom:-50px">
                    <p>Interested in a demo? &nbsp; <a href="@Url.Action("DemoLogin")" class="LGLink"><span>Login as a guest user!</span></a>
                </div>
            </div>

            <!-- end login-content -->
        </div>
        <!-- end login -->
    </div>
    <!-- end page container -->
    <!-- ================== BEGIN BASE JS ================== -->
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <!--[if lt IE 9]>
        <script src="../assets/crossbrowserjs/html5shiv.js"></script>
        <script src="../assets/crossbrowserjs/respond.min.js"></script>
        <script src="../assets/crossbrowserjs/excanvas.min.js"></script>
    <![endif]-->
    <script src="~/Scripts/jquery.slimscroll.min.js"></script>
    <script src="~/Scripts/js.cookie.js"></script>
    <script src="~/Scripts/default.min.js"></script>
    <script src="~/Scripts/apps.min.js"></script>
    <script src="~/Scripts/jquery.gritter.js"></script>
    <script src="~/Scripts/DrewCustom.js"></script>
    <!-- ================== END BASE JS ================== -->

    <script>
        $(document).ready(function () {
            App.init();
        });</script>

    <script>
        var passwordResetSuccess = '@TempData["PasswordResetSuccess"]';
        if (passwordResetSuccess == "true") {
            $.gritter.add({
                // (string | mandatory) the heading of the notification
                title: 'Password Reset Request',
                // (string | mandatory) the text inside the notification
                text: 'You have been sent a link to change your password. Please check the email account registered with this website.'
            });
        }
    </script>
</body>
</html>
